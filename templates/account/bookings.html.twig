{% extends "base.html.twig" %}

{% block title %}Mes réservations
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="my-5">Mes réservations</h1>
		<div class="alert alert-info mt-5">
			<p>Retrouver ci-dessous toutes vos réservations passées et avenir</p>
		</div>


		{% for booking in app.user.bookings %}

			{% set ad = booking.ad %}
			<div class="row mt-5">
				<div class="col-md-4">
					<img src="filenamee" alt="Photo de l'annonce {{ ad.title }}" class="img-fluid">

					<div class="mt-3">
						{% set comment = ad.commentFromAuthor(app.user) %}

						{% if comment is not null %}
							<strong>Note:
							</strong>
							{% include "partials/rating.html.twig" with {'rating' : comment.rating} %}
						{% else %}
							<p>Vous n'avez pas encore donné de note.

								<a href="{{ path('booking_show', {'id' : booking.id}) }} #comment">Je donne mon avis !
								</a>
							</p>
						{% endif %}

					</div>
				</div>
				<div class="col-md-8">
					<h4>{{ ad.title }}</h4>

					<p>
						Réservation
						<strong>n°
							{{ booking.id}}</strong><br>
						Du
						{{ booking.startDate | date('d/m/Y') }}
						au
						{{ booking.endDate | date('d/m/Y') }}
						(
						{{ booking.amount | number_format(2,',','')}}
						&euro;)
					</p>
					<a href="{{ path('booking_show', {'id' : booking.id}) }}" class="btn btn-info">+ d'infos</a>
					{# TODO: Vérifier si la réervation est dans le panier #}
					<a href="{{path('cart_add', {'id' : ad.id}) }}" class="btn btn-success">Ajouter au panier
						<i class="fas fa-shopping-basket"></i>
					</a>
					<a href="{{ path('booking_delete', {'id' : booking.id}) }}" class="btn btn-danger">Annuler la réservation</a>

				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
