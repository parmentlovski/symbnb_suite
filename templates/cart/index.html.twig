{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<div class="bg-light p-3">
		<h1>Votre panier</h1>
	</div>


	{% if items | length > 0 %}
		<table class="table">
			<thead>
				<tr>
					<th>Titre de l'annonce</th>
					<th>Ville</th>
					<th>Prix</th>
					<th>Quantit√©</th>
					<th>Total</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
              
					<tr>
						<td>{{item.ad.title}}</td>
						<td>{{item.ad.city}}</td>
						<td>{{item.ad.price}}</td>
						<td>{{item.quantity}}</td>
						<td>{{item.ad.price * item.quantity}}</td>
						<td>
							<a href="{{path('cart_remove', {'id': item.ad.id}) }}" class="btn btn-danger btn-sm">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<td colspan="3" class="text-right">Total :
					</td>
					<td>
						{{ total }}
					</td>
					<td></td>
				</tr>
			</tfoot>
		</table>
	{% else %}

		<p>Surprise, c'est vide !</p>
	{% endif %}


{% endblock %}
