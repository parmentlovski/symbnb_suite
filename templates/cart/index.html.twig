{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<div class="bg-light p-3">
		<h1>Votre panier</h1>
	</div>

	{% if items | length > 0 %}
		<table class="table">
			<thead>
				<tr>
					<th>Titre de l'annonce</th>
					<th>Arrivée</th>
					<th>Départ</th>
					<th>Ville</th>
					<th>Nombre de nuits</th>
					<th>Prix</th>
					<th></th>
				</tr>
			</thead>
			<tbody>

				{% for item in items %}
					<tr>
						<td>{{item.booking.ad.title}}</td>
						<td>{{item.booking.startDate | date('d/m/Y') }}</td>
						<td>{{item.booking.endDate | date('d/m/Y') }}</td>
						<td>{{item.booking.ad.city}}</td>
						<td>{{item.quantity}}</td>
						<td>{{item.booking.amount}}
							&euro;
						</td>
						<td>
							<a title="supprimer du panier" href="{{path('cart_remove', {'id': item.booking.id}) }}" class="btn btn-danger btn-sm">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				</td>
			</tbody>
		</tr>
	{% endfor %}


</tbody>
<tfoot>
	<tr>
		<td colspan="5" class="text-right">Total :</td>
		<td>
			{{ total }}
			&euro;
		</td>
		<td>
			<a href="#" class="btn btn-success">Valider mon panier</a>
		</td>
	</tr>
</tfoot></td></tr></tfoot></table>{% else %}<p>Surprise, c'est vide !</p>{% endif %}{% endblock %}
