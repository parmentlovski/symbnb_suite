{% set url = path('ads_show', {'slug' : ad.slug}) %}
<div class="col-md-4">
	<div class="card bg-light mb-3">
		<div class="card-header">
			<strong>{{ ad.city }}</strong><br>
			{{ ad.rooms }}
			chambres,
			<strong>{{ ad.price  | number_format(2,',','')}}
				&euro; / nuit</strong><br>
			{% if ad.comments | length > 0 %}
				{% include "partials/rating.html.twig" with {'rating' : ad.avgRating} %}
			{% else %}
				<small>Pas encore noté</small>
			{% endif %}
		</div>
		<a href="{{ url }}">
			<img src="{{ vich_uploader_asset(ad, 'imageFile') }}" alt="Image de l'annonce {{ ad.slug }}" style="height: 200px; width: 100%; display: block;">


		</a>
		<div class="card-body">
			<h4 class="card-title">
				<a href="{{ url }}">
					{{ ad.title }}
				</a>
			</h4>
			<p class="card-text">
				{{ ad.introduction }}
			</p>
			<div class="d-flex justify-content-between align-items-center">
				<a href="{{ url }}" class="btn btn-primary float-left">En savoir +</a>

				{% if app.user and app.user != ad.author  %}

					<a href="{{ path('booking_create', {'slug' : ad.slug, 'id': ad.id}) }}" class="btn btn-success">Je réserve !</a>

				{% endif %}
				{% if  app.user and app.user == ad.author %}

					<a href="{{ path('ads_edit', {'slug' : ad.slug }) }}" class="btn btn-secondary float-right">Modifier l'annonce</a>

					{% else %}

				{% endif %}
			</div>
			{# <a href="{{path('cart_add', {'id': ad.id}) }}" class="btn btn-info float-right">Ajouter
																																																																				<i class="fas fa-shopping-basket"></i>
																																																																				</a> #}
			{# <div class=" mt-3 d-flex justify-content-center-align-items-center">
																			{% if app.user and app.user == ad.author %}
																				<a href="{{ path('ads_edit', {'slug' : ad.slug }) }}" class="btn btn-secondary float-right">Modifier l'annonce</a>
																			{% endif %}
															
																		</div> #}

		</div>
	</div>
</div>
